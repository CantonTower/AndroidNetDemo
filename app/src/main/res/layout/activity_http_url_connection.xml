<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <Button
        android:id="@+id/btn_conn_get"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="HttpURLConnection的get请求"
        android:textAllCaps="false"
        />

    <Button
        android:id="@+id/btn_conn_img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="HttpURLConnection的图片获取"
        android:textAllCaps="false"
        />

    <Button
        android:id="@+id/btn_conn_post"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="HttpURLConnection的post请求"
        android:textAllCaps="false"
        />

    <Button
        android:id="@+id/btn_conn_params"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="带参数的请求"
        />

    <Button
        android:id="@+id/btn_conn_file"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="上传文件"
        />

    <Button
        android:id="@+id/btn_conn_down_file"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="下载文件"
        />

    <ImageView
        android:id="@+id/iv_conn_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

</LinearLayout>